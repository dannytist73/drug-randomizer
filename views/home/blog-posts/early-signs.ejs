<% const post = { 
  title: "Early Signs of Drug Dependency: What to Watch For",
  slug: "early-signs-of-drug-dependency",
  category: "Prevention",
  date: "March 10, 2025",
  readTime: 8,
  featuredImage: "https://images.unsplash.com/photo-1576091160550-2173dba999ef?fm=jpg&q=60&w=3000&ixlib=rb-4.0.3",
  author: {
      name: "Dr. Maria Santos",
      avatar: "https://source.unsplash.com/random/100x100/?doctor",
      bio: "Clinical Psychologist specializing in substance abuse treatment with 15 years of experience in the field."
  },
  tags: ["Warning Signs", "Prevention", "Early Intervention", "Family Support"],
  relatedPosts: [
      {
          title: "Supporting a Loved One Through Recovery",
          slug: "supporting-loved-ones-recovery",
          category: "Recovery",
          excerpt: "Family support plays a crucial role in successful recovery. This guide provides practical advice for family members.",
