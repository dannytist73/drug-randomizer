<div class="container mx-auto px-4 py-8">
  <!-- Page Header -->
  <div class="mb-10 text-center">
    <h1 class="text-3xl font-bold text-blue-900 mb-4">Contact Authorities</h1>
    <p class="text-lg text-gray-600 max-w-3xl mx-auto">
      Reach out to these official agencies in the Philippines for reporting
      drug-related incidents, seeking help for addiction, or learning more about
      drug prevention programs.
    </p>
  </div>

  <!-- Emergency Hotline Banner -->
  <div
    class="bg-red-100 border-l-4 border-red-500 text-red-700 p-4 mb-10 rounded-md shadow-sm"
  >
    <div class="flex">
      <div class="flex-shrink-0">
        <svg
          class="h-5 w-5 text-red-500"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
          ></path>
        </svg>
      </div>
      <div class="ml-3">
        <p class="text-lg font-medium">
          For immediate emergency assistance, call <strong>911</strong>
        </p>
        <p>
          If you're witnessing a drug-related crime in progress or need
          immediate help, contact emergency services right away.
        </p>
      </div>
    </div>
  </div>

  <!-- Authority Cards -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-12">
    <% authorities.forEach(authority => { %>
    <div
      class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition"
    >
      <div class="p-6 border-b border-gray-200 bg-blue-50">
        <h2 class="text-2xl font-bold text-blue-900"><%= authority.name %></h2>
        <p class="text-gray-600 mt-1"><%= authority.description %></p>
      </div>
      <div class="p-6">
        <div class="space-y-4">
          <div class="flex items-start">
            <div class="flex-shrink-0 mt-1">
              <svg
                class="h-5 w-5 text-blue-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-gray-500">Phone</p>
              <p class="text-gray-800 font-medium"><%= authority.contact %></p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 mt-1">
              <svg
                class="h-5 w-5 text-blue-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"
                ></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-gray-500">Email</p>
              <p class="text-gray-800 font-medium"><%= authority.email %></p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 mt-1">
              <svg
                class="h-5 w-5 text-blue-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9"
                ></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-gray-500">Website</p>
              <p
                class="text-blue-600 font-medium hover:text-blue-800 transition"
              >
                <a href="<%= authority.website %>" target="_blank"
                  ><%= authority.website.replace(/(^\w+:|^)\/\//, '') %></a
                >
              </p>
            </div>
          </div>

          <div class="flex items-start">
            <div class="flex-shrink-0 mt-1">
              <svg
                class="h-5 w-5 text-red-500"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M13 10V3L4 14h7v7l9-11h-7z"
                ></path>
              </svg>
            </div>
            <div class="ml-3">
              <p class="text-sm text-gray-500">Hotline</p>
              <p class="text-red-600 font-medium"><%= authority.hotline %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% }); %>
  </div>

  <!-- Reporting Guidelines Section -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-12">
    <div class="bg-blue-900 px-6 py-4">
      <h2 class="text-xl font-bold text-white">
        Guidelines for Reporting Drug-Related Incidents
      </h2>
    </div>
    <div class="p-6">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <div>
          <h3 class="text-lg font-bold text-blue-800 mb-4">What to Report</h3>
          <ul class="space-y-3">
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-blue-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Suspected drug dealing or distribution activities
              </p>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-blue-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Drug manufacturing locations or laboratories
              </p>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-blue-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Unusual chemical odors or waste from residential areas
              </p>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-blue-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Frequent unusual traffic or visitors to a location
              </p>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-blue-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Drug paraphernalia found in public spaces
              </p>
            </li>
          </ul>
        </div>
        <div>
          <h3 class="text-lg font-bold text-blue-800 mb-4">
            How to Report Effectively
          </h3>
          <ul class="space-y-3">
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-green-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Provide specific locations with addresses when possible
              </p>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-green-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Note dates and times of suspicious activities
              </p>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-green-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Describe individuals involved (clothing, vehicles) if safe to
                observe
              </p>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-green-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                Never put yourself in danger to gather information
              </p>
            </li>
            <li class="flex items-start">
              <div class="flex-shrink-0 mt-1">
                <svg
                  class="h-5 w-5 text-green-500"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M5 13l4 4L19 7"
                  ></path>
                </svg>
              </div>
              <p class="ml-3 text-gray-700">
                You may choose to remain anonymous when reporting
              </p>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <!-- Report an Incident Form -->
  <div class="bg-white rounded-lg shadow-md overflow-hidden mb-12">
    <div class="bg-blue-900 px-6 py-4">
      <h2 class="text-xl font-bold text-white">Report an Incident</h2>
    </div>
    <div class="p-6">
      <p class="text-gray-700 mb-6">
        Use this form to report a drug-related incident to the appropriate
        authorities. Your report can be anonymous if you choose. All reports are
        treated confidentially and investigated thoroughly.
      </p>
      <form action="#" method="POST" class="space-y-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label
              for="name"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Your Name (Optional)</label
            >
            <input
              type="text"
              id="name"
              name="name"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
          <div>
            <label
              for="contact"
              class="block text-sm font-medium text-gray-700 mb-1"
              >Contact Information (Optional)</label
            >
            <input
              type="text"
              id="contact"
              name="contact"
              class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            />
          </div>
        </div>

        <div>
          <label
            for="location"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Incident Location*</label
          >
          <input
            type="text"
            id="location"
            name="location"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
        </div>

        <div>
          <label for="date" class="block text-sm font-medium text-gray-700 mb-1"
            >Date/Time of Incident*</label
          >
          <input
            type="text"
            id="date"
            name="date"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          />
        </div>

        <div>
          <label
            for="details"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Incident Details*</label
          >
          <textarea
            id="details"
            name="details"
            rows="5"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          ></textarea>
        </div>

        <div>
          <label
            for="authority"
            class="block text-sm font-medium text-gray-700 mb-1"
            >Report To*</label
          >
          <select
            id="authority"
            name="authority"
            required
            class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          >
            <option value="" disabled selected>Select an authority</option>
            <option value="pdea">
              Philippine Drug Enforcement Agency (PDEA)
            </option>
            <option value="pnp">Philippine National Police (PNP)</option>
            <option value="ddb">Dangerous Drugs Board (DDB)</option>
            <option value="doh">Department of Health (DOH)</option>
          </select>
        </div>

        <div class="flex items-start">
          <div class="flex items-center h-5">
            <input
              id="anonymous"
              name="anonymous"
              type="checkbox"
              class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
            />
          </div>
          <div class="ml-3 text-sm">
            <label for="anonymous" class="font-medium text-gray-700"
              >Submit anonymously</label
            >
            <p class="text-gray-500">
              Check this box if you do not wish to provide your personal
              information.
            </p>
          </div>
        </div>

        <button
          type="submit"
          class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-opacity-50 transition"
        >
          Submit Report
        </button>
      </form>
    </div>
  </div>

  <!-- Additional Resources -->
  <div class="bg-blue-50 rounded-lg p-6">
    <h2 class="text-xl font-bold text-blue-900 mb-4">Additional Resources</h2>
    <p class="text-gray-700 mb-4">
      These resources provide further information and support related to drug
      prevention and rehabilitation:
    </p>
    <ul class="space-y-2 text-gray-700">
      <li class="flex items-center">
        <svg
          class="h-5 w-5 text-blue-500 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          ></path>
        </svg>
        <a href="#" class="text-blue-600 hover:text-blue-800 transition"
          >National Drug Education Program</a
        >
      </li>
      <li class="flex items-center">
        <svg
          class="h-5 w-5 text-blue-500 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          ></path>
        </svg>
        <a href="#" class="text-blue-600 hover:text-blue-800 transition"
          >Substance Abuse Helpline Directory</a
        >
      </li>
      <li class="flex items-center">
        <svg
          class="h-5 w-5 text-blue-500 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          ></path>
        </svg>
        <a href="#" class="text-blue-600 hover:text-blue-800 transition"
          >Drug Abuse Prevention for Parents and Educators</a
        >
      </li>
      <li class="flex items-center">
        <svg
          class="h-5 w-5 text-blue-500 mr-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          ></path>
        </svg>
        <a href="#" class="text-blue-600 hover:text-blue-800 transition"
          >Workplace Drug Testing Guidelines</a
        >
      </li>
    </ul>
  </div>
</div>
