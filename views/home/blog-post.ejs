<div class="container mx-auto px-4 py-8">
  <!-- Breadcrumbs -->
  <div class="text-sm breadcrumbs mb-6">
    <ul class="flex items-center text-gray-500">
      <li class="flex items-center">
        <a href="/" class="hover:text-blue-600">Home</a>
        <svg
          class="w-4 h-4 mx-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </li>
      <li class="flex items-center">
        <a href="/resources" class="hover:text-blue-600">Resources</a>
        <svg
          class="w-4 h-4 mx-2"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M9 5l7 7-7 7"
          ></path>
        </svg>
      </li>
      <li><%= post.title %></li>
    </ul>
  </div>

  <div class="bg-white rounded-lg shadow-md overflow-hidden">
    <!-- Featured Image -->
    <div
      class="h-64 md:h-80 bg-cover bg-center"
      style="background-image: url('<%= post.featuredImage %>')"
    ></div>

    <!-- Article Content -->
    <div class="p-6 md:p-10">
      <div class="mb-8">
        <span
          class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm font-medium"
          ><%= post.category %></span
        >
        <h1 class="text-3xl md:text-4xl font-bold text-blue-900 mt-4 mb-2">
          <%= post.title %>
        </h1>
        <div class="flex items-center text-gray-500 text-sm mt-2">
          <span><%= post.date %></span>
          <span class="mx-3">â€¢</span>
          <span><%= post.readTime %> min read</span>
        </div>
      </div>

      <div class="prose prose-lg max-w-none text-gray-700">
        <%- post.content %>
      </div>

      <!-- Tags -->
      <div class="mt-10 pt-6 border-t border-gray-200">
        <div class="flex flex-wrap gap-2">
          <% post.tags.forEach(tag => { %>
          <span class="px-3 py-1 bg-gray-100 text-gray-800 rounded-full text-sm"
            ><%= tag %></span
          >
          <% }); %>
        </div>
      </div>

      <!-- Author Info -->
      <div class="mt-10 pt-6 border-t border-gray-200">
        <div class="flex items-center">
          <div class="flex-shrink-0">
            <img
              class="h-12 w-12 rounded-full"
              src="<%= post.author.avatar %>"
              alt="<%= post.author.name %>"
            />
          </div>
          <div class="ml-4">
            <h4 class="font-medium text-gray-900"><%= post.author.name %></h4>
            <p class="text-sm text-gray-500"><%= post.author.bio %></p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Related Articles -->
  <div class="mt-12">
    <h2 class="text-2xl font-bold text-blue-900 mb-6">Related Articles</h2>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <% post.relatedPosts.forEach(related => { %>
      <div
        class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition"
      >
        <div
          class="h-48 bg-cover bg-center"
          style="background-image: url('<%= related.image %>')"
        ></div>
        <div class="p-6">
          <span
            class="px-2 py-1 bg-blue-100 text-blue-800 rounded-full text-xs font-medium"
            ><%= related.category %></span
          >
          <h3 class="text-lg font-bold mb-2 mt-2 text-blue-900">
            <%= related.title %>
          </h3>
          <p class="text-gray-700 mb-4 line-clamp-2"><%= related.excerpt %></p>
          <a
            href="/resources/<%= related.slug %>"
            class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center"
          >
            Read More
            <svg
              class="w-4 h-4 ml-1"
              fill="none"
              stroke="currentColor"
              viewBox="0 0 24 24"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M14 5l7 7m0 0l-7 7m7-7H3"
              ></path>
            </svg>
          </a>
        </div>
      </div>
      <% }); %>
    </div>
  </div>

  <!-- Call to Action -->
  <div class="mt-12 bg-blue-50 rounded-lg p-8 text-center">
    <h2 class="text-2xl font-bold text-blue-900 mb-4">
      Need More Information?
    </h2>
    <p class="text-gray-700 max-w-2xl mx-auto mb-6">
      We're here to help. If you have questions or need more resources about
      drug prevention, treatment, or support services, contact us or explore our
      comprehensive resource library.
    </p>
    <div class="flex flex-wrap justify-center gap-4">
      <a
        href="/resources"
        class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 px-6 rounded-lg transition inline-block"
      >
        Browse Resources
      </a>
      <a
        href="/authorities"
        class="bg-white text-blue-900 hover:bg-blue-100 font-bold py-3 px-6 rounded-lg transition inline-block border border-blue-200"
      >
        Contact Support
      </a>
    </div>
  </div>
</div>
